
@model List<ClasificacionExamenMedicoModel>





@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="card-header">
        Lista Clasificacion Examen Medico

        <a asp-action="Guardar" asp-controller="Categoria" class="btn btn-success">
            <i class="bi bi-plus-circle"></i>
            Crear nuevo
        </a>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                     
                        <p class="card-text">@item.Descripcion</p>
                        <a asp-action="Lista" asp-controller="Categoria" class="btn btn-primary" asp-route-id="@item.id">
                            <i class="bi bi-eye"></i> Analisis
                        </a>
                        <a asp-action="Eliminar" asp-controller="Categoria" class="btn btn-danger" asp-route-idEnfermera="@item.id">
                            <i class="bi bi-x-circle-fill"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


