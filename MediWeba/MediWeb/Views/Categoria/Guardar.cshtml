@model CategoriaModel



@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="card-header">
        Crear Categoria
    </div>
    <div class="card-body">

        <form asp-action="Guardar" asp-controller="Categoria" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Descripcion</label>
                <input asp-for="Descripcion" type="text" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Descripcion" class="text-danger"></span>

            </div>
          


            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy-fill"></i> Guardar
            </button>
            <a asp-action="Listar" asp-controller="Categoria" class="btn btn-warning">
                <i class="bi bi-arrow-left-circle-fill"></i> Volver a la lista
            </a>
        </form>

    </div>
</div>

