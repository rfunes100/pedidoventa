

@model List<EspecialidadDoctorModel>



@{
    ViewData["Title"] = "ListaDoctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<div class="card">
    <div class="card-header">
        Lista Especialidades Doctor
    </div>
    <div class="card-body">
         <a asp-action="Guardar" asp-controller="EspecialidadDoctor" class="btn btn-success"
           asp-route-id="@ViewBag.Id">
            <i class="bi bi-plus-circle"></i>
            Crear nuevo</a> 
        <br />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Especialidad</th>
         
                
                    <th></th>

                </tr>
              

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.EspecialidadMedica?.Nombre</td>
                      
            
                        <td>


                            <a asp-action="Eliminar" asp-controller="EspecialidadDoctor" class="btn btn-danger" asp-route-id="@item.id">
                                <i class="bi bi-x-circle-fill"></i> Eliminar
                            </a>
                            <a asp-action="ListaDoctor" asp-controller="ProcedimientosMedicos" class="btn btn-info" asp-route-id="@item.idEspecailidad">
                                <i class="bi bi-journal-medical"></i> Procedimientos
                            </a>

                        </td>
                    </tr>
                    
                }
            </tbody>

        </table>
 

    </div>
</div>



