@using Microsoft.AspNetCore.Http

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MediWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>

    @{
        var usuarioid = HttpContextAccessor?.HttpContext?.Session.GetString("usuarioid");
    }

 
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PymePedido</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Manteniminetos</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Medicamento" asp-action="Lista">
                                        <i class="bi bi-box"></i> Articulos
                                    </a>
                                </li>
                                                        

                                <li>
                                    <a class="dropdown-item" asp-controller="Categoria" asp-action="Listar">
                                        <i class="bi bi-tags"></i> Categorias
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Paciente" asp-action="Listar" >
                                        <i class="bi bi-person-fill"></i> Clientes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="Lista">
                                        <i class="bi bi-person-fill"></i> USUARIOS
                                    </a>
                                </li>
                                
                             @*    <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="ClasificacionExamenMedico" asp-action="Listar">
                                    
                                        <i class="bi bi-prescription2"></i> Examenes
                                    </a>
                                </li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Enfermedades" asp-action="Listar" >Enfermedades</a></li>
                            *@
                            </ul>
                        </li>

                           <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Inventario</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Compra" asp-action="Reporte">
                                        <i class="bi bi-bag-fill"></i> Compras
                                    </a>
                                </li>
                                                        

                                <li>
                                    <a class="dropdown-item" asp-controller="Pedido" asp-action="CrearPedido">
                                        <i class="bi bi-tags"></i> Crear Pedidos
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Pedido" asp-action="Reporte">
                                        <i class="bi bi-receipt"></i> Pedidos
                                    </a>
                                </li>


                                <li>
                                    <a class="dropdown-item" asp-controller="Pedido" asp-action="StockProducto">
                                        <i class="bi bi-archive"></i> Stock productos
                                    </a>
                                </li>

                                
                            </ul>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Reportes</a>
                            <ul class="dropdown-menu">
                        @*         <li><a class="dropdown-item" asp-area="" asp-controller="Enfermera" asp-action="Listar">
                                        <i class="bi bi-calendar3"></i> Reporte Citas
                                    </a>
                                </li>
                                <li><a class="dropdown-item" href="#">
                                        <i class="bi bi-journal-text"></i>  Citas por Doctor</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">
                                        <i class="bi bi-capsule"></i> Medicamentos Recetados
                                    </a>
                                </li>
                                <li><a class="dropdown-item" href="#">
                                        <i class="bi bi-file-medical"></i>   Expediente Clinico
                                    </a>
                                </li> *@
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                         
                            <a class="nav-link text-dark" >Usuario: @usuarioid</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MediWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
