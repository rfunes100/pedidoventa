@model UsuarioModel




@{
    ViewData["Title"] = "Guardar";
    var message = TempData["Error"] as string;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header">
        Crear Usuario
    </div>
    <div class="card-body">

        <form asp-action="Guardar" asp-controller="Usuario" method="post">

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-danger">
                    @message
                </div>
            }
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Usuario</label>
                <input asp-for="Userid" type="text" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Userid" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Nombre" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Apellido</label>
                <input asp-for="Apellido" type="text" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Apellido" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Correo</label>
                <input asp-for="Correo" type="email" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Correo" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Clave</label>
                <input asp-for="Clave" type="password" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Clave" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Clave</label>
                <input asp-for="estado" type="password" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="estado" class="text-danger"></span>

            </div>


            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Pregunta Recuperacion</label>
                <textarea asp-for="PreguntaRecuperacion" id="Direccion" class="form-control" rows="3" cols="30"> </textarea>
                <span asp-validation-for="PreguntaRecuperacion" class="text-danger"></span>

            </div>


            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Respuesta Recuperacion</label>
                <textarea asp-for="RespuestaRecuperacion" id="Direccion" class="form-control" rows="3" cols="30"> </textarea>
                <span asp-validation-for="RespuestaRecuperacion" class="text-danger"></span>

            </div>

            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Rol</label>
                <select asp-for="RolId" class="form-control" asp-items="ViewBag.Roles">
                    <option>--Seleccione Rol</option>
                </select>

            </div>




            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy-fill"></i> Guardar
            </button>
            <a asp-action="Lista" asp-controller="Usuario" class="btn btn-warning">
                <i class="bi bi-arrow-left-circle-fill"></i> Volver a la lista
            </a>
        </form>

    </div>
</div>


