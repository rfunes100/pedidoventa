@model List<CategoriaModel>





@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="card-header">
        Lista  de categorias

        <a asp-action="Guardar" asp-controller="Categoria" class="btn btn-success">
            <i class="bi bi-plus-circle"></i>
            Crear nuevo
        </a>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">

                        <p class="card-text">@item.Descripcion</p>
                        <a asp-action="Editar" asp-controller="Categoria" class="btn btn-primary" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i> Editar
                        </a>
                        <a asp-action="Eliminar" asp-controller="Categoria" class="btn btn-danger" asp-route-idEnfermera="@item.Id">
                            <i class="bi bi-x-circle-fill"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


